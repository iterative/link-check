{
  "name": "repo-link-check",
  "version": "0.14.0",
  "description": "A multi-target library for ensuring all links in a file are alive",
  "main": "index.js",
  "author": "RMP",
  "license": "MIT",
  "private": false,
  "scripts": {
    "format": "prettier --write",
    "format-check-all": "prettier --check \"**/*.{js,jsx,md,tsx,ts,json}\"",
    "format-all": "prettier --write \"**/*.{js,jsx,md,tsx,ts,json}\"",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint-fix": "eslint --fix \"**/*.{js,jsx,ts,tsx}\"",
    "lint-ts": "tsc --noEmit --skipLibCheck",
    "fix-all": "yarn format-all && yarn lint-fix && yarn lint-ts",
    "prepare": "husky install",
    "build": "webpack"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@types/commander": "^2.12.2",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.182",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "babel-jest": "^28.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.4",
    "terser-webpack-plugin": "^5.3.3",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "bottleneck": "^2.19.5",
    "commander": "^9.4.0",
    "execa": "^6.1.0",
    "fast-glob": "^3.2.11",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.5",
    "node-fetch": "^3.2.9"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "repo-link-check": "./dist/cli.js"
  }
}
